{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Course index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>FlightTime</th>
                <th>FloorTime</th>
                <th>BriefingTime</th>
                <th>Price</th>
                <th>FlightHourPrice</th>
                <th>FloorHourPrice</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.title }}</td>
                <td>{{ course.slug }}</td>
                <td>{{ course.flightTime }}</td>
                <td>{{ course.floorTime }}</td>
                <td>{{ course.briefingTime }}</td>
                <td>{{ course.price }}</td>
                <td>{{ course.flightHourPrice }}</td>
                <td>{{ course.floorHourPrice }}</td>
                <td>
                    <a href="{{ path('course_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('course_new') }}">Create new</a>
{% endblock %}
