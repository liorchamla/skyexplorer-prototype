{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="row mt-5">
        <div class="col-md-4">&nbsp;</div>
        <div class="col-md-4">
            <div class="bg-light py-3 px-4 clearfix">
                <h1 class="mb-3 mt-0">Connexion</h1>

                {% if error %}
                    <div class="alert alert-warning">Erreur :
                        {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" id="username" placeholder="Adresse email" name="_username" value="{{ last_username }}"/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" id="password" placeholder="Mot de passe" name="_password"/>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success float-right" type="submit">Connexion</button>
                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-4">&nbsp;</div>
    </div>
{% endblock %}